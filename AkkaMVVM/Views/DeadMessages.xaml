<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:AkkaMvvm.ViewModels">

    <DataTemplate DataType="{x:Type vm:DeadMessagesViewModel}">
        <ScrollViewer VerticalScrollBarVisibility="Visible">
            <TextBlock Background="AliceBlue" FontFamily="Conolas" Text="{Binding DeadMessages}" />
        </ScrollViewer>
    </DataTemplate>

</ResourceDictionary>